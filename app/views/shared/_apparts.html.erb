<div class="card-grid">
  <% @flats.each do |flat| %>
    <a href="appartements/<%= flat.id %>">
      <div class="card-flat">
        <figure>
          <img src="<%= cl_image_path flat.main_photo.key %>" alt="">
        </figure>
        <div class="card-flat-body">
          <p class="card-text"><%= flat.address %></p>
          <h2 class="card-title font-(family-name:--body-font)"><%= flat.name %></h2>
          <p class="card-text"><span class="card-icon">🛏️</span> <%= flat.rooms %> chambres</p>
          <p class="card-text"><span class="card-icon">🏠</span> <%= flat.surface %> m²</p>
          <p class="card-text"><span class="card-icon">📍</span> <%= flat.subway %></p>
        </div>
      </div>
    </a>
  <% end %>
</div>