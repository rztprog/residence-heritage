<div class="card-grid mt-5 mb-5">
    <% @flats.each do |flat| %>
      <a href="appartements/<%= flat.id %>">
        <div class="card-flat">
          <figure>
            <img src="https://plus.unsplash.com/premium_photo-1674676471417-07f613528a94?q=80&w=1445&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="">
          </figure>
          <div class="card-flat-body">
            <p class="card-text"><%= flat.address %></p>
            <h2 class="card-title font-(family-name:--body-font)"><%= flat.name %></h2>
            <p class="card-text"><span class="card-icon">🛏️</span> <%= flat.rooms %> chambres</p>
            <p class="card-text"><span class="card-icon">🏠</span> <%= flat.surface %> m²</p>
            <p class="card-text"><span class="card-icon">📍</span> <%= flat.subway %></p>
          </div>
        </div>
      </a>
    <% end %>
  </div>