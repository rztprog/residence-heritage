<section class="w-full px-6 sm:px-12 lg:px-[120px] xl:px-[140px] mx-auto">
  <header class="section-title">
    <h1>Créer un nouvel appartement</h1>
  </header>
  <div class="form mt-4 mb-4">
    <%= form_for @flat do |f| %>
     <div class='flex mb-2'>
        <div class="actions">
          <%= f.submit "Enregistrer", class: "cursor-pointer bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-xl shadow transition duration-150" %>
        </div>

        <%= link_to flats_path, class: "ml-1 bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-xl shadow transition duration-150" do %>
          <i class="fas fa-undo-alt"> Retour</i>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :name, "Nom de l'appartement" %><br>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :address, "Adresse" %><br>
        <%= f.text_field :address %>
      </div>

      <div class="field">
        <%= f.label :title, "Titre de l'annonce" %><br>
        <%= f.text_field :title %>
      </div>

      <div class="field">
        <%= f.label :rooms, "Nombre de chambre" %><br>
        <%= f.number_field :rooms %>
      </div>

      <div class="field">
        <%= f.label :surface, "Surface en m²" %><br>
        <%= f.number_field :surface %>
      </div>

      <div class="field">
        <%= f.label :subway, "Transport à proximité" %><br>
        <%= f.text_field :subway %>
      </div>

      <div class="field">
        <%= f.label :description, "Description" %><br>
        <%= f.text_area :description %>
      </div>

      <div class="field">
        <%= f.label :main_photo, "Photo principale (URL Cloudinary)" %><br>
        <%= f.file_field :main_photo %>
      </div>

      <div class="field">
        <%= f.label :rent, "Loyer (en €)" %><br>
        <%= f.number_field :rent, placeholder: "600" %>
      </div>

      <div class="field ">
        <%= f.label :charges, "Charges (en €)" %><br>
        <%= f.number_field :charges, placeholder: "50" %>
      </div>
    <% end %>
  </div>
</section>
